<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <div id="root">
      <%- include('partials/header') %>

      <main class="mt-4">
        <div class="container">
          <h1 class="text-center">Thêm sản phẩm</h1>

          <form
            action="/api/figure/addNew"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="form-floating">
              <input type="text" class="form-control" id="title" name="title" />
              <label for="title">Tên sản phẩm</label>
            </div>

            <div class="row mt-3">
              <div class="col-6">
                <div class="form-floating">
                  <input
                    type="tel"
                    class="form-control"
                    name="original_price"
                    id="original_price"
                  />
                  <label for="original_price">Giá gốc</label>
                </div>
              </div>
              <div class="col-6">
                <div class="form-floating">
                  <input
                    type="tel"
                    class="form-control"
                    name="discount"
                    id="discount"
                    value="0"
                  />
                  <label for="discount">Giảm giá (nếu có)</label>
                </div>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-6">
                <select
                  class="form-select"
                  aria-label="Default select example"
                  name="category"
                >
                  <option selected>Loại Figure</option>
                  <option value="scale-figure">Scale Figure</option>
                  <option value="nendoroid">Nendoroid</option>
                  <option value="pop-up-parade">Pop Up Parade</option>
                  <option value="figma">Figma</option>
                  <option value="r-18">R18</option>
                  <option value="others">KHÁC</option>
                </select>
              </div>

              <div class="col-6">
                <select
                  class="form-select"
                  aria-label="Default select example"
                  name="scale"
                >
                  <option selected>Tỉ lệ Figure</option>
                  <option value="non-scale">None Scale</option>
                  <option value="1/3">1/3</option>
                  <option value="1/4">1/4</option>
                  <option value="1/5">1/5</option>
                  <option value="1/6">1/6</option>
                  <option value="1/7">1/7</option>
                  <option value="1/8">1/8</option>
                  <option value="1/10">1/10</option>
                  <option value="1/12">1/12</option>
                </select>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-6">
                <select
                  class="form-select"
                  aria-label="Default select example"
                  name="manufacturer"
                >
                  <option selected>Hãng sản xuất</option>
                  <% if (manufacturers.length > 0) { %> <%
                  manufacturers.map(item => { %>
                  <option value="<%= item.value %>"><%= item.label %></option>
                  <% }) %> <% } %>
                </select>
              </div>

              <div class="col-6">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="character"
                    id="character"
                  />
                  <label for="character">Tên nhân vật</label>
                </div>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-5">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="series"
                    id="series"
                  />
                  <label for="series">Tên Series</label>
                </div>
              </div>
              <div class="col-5">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="size"
                    id="size"
                  />
                  <label for="size">Kích thước</label>
                </div>
              </div>

              <div class="col-2">
                <div class="form-floating">
                  <input
                    type="tel"
                    class="form-control"
                    name="in_stock"
                    id="in_stock"
                  />
                  <label for="in_stock">Số lượng</label>
                </div>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-6">
                <div>
                  <label for="thumbnail" class="form-label">Thumbnail</label>
                  <input
                    class="form-control"
                    type="file"
                    id="thumbnail"
                    name="thumbnail"
                  />
                </div>
              </div>

              <div class="col-6">
                <div>
                  <label for="collections" class="form-label"
                    >Thư viện ảnh</label
                  >
                  <input
                    class="form-control"
                    type="file"
                    id="collections"
                    name="collections"
                    multiple
                  />
                </div>
              </div>
            </div>

            <div class="mt-3">
              <label for="description" class="form-label">Mô tả sản phẩm</label>
              <textarea
                class="form-control"
                id="description"
                rows="3"
                name="description"
              ></textarea>
            </div>

            <div class="d-grid mt-3">
              <input type="submit" value="Upload" class="btn btn-danger" />
            </div>
          </form>
        </div>
      </main>

      <%- include('partials/footer') %>
    </div>
  </body>
</html>
